{
  "name": "bun_spa",
  "private": true,
  "type": "module",
  "module": "index.ts",
  "scripts": {
    "dev": "bun run build && bun run --parallel dev:server dev:watch",
    "dev:server": "bun --watch index.ts",
    "dev:watch": "bun build ./src/main.ts --outdir ./dist --watch",
    "build": "mkdir -p dist && cp index.html dist/ && bun build ./src/main.ts --outdir ./dist",
    "lint": "oxlint .",
    "format": "oxlint --format .",
    "fix": "oxlint --fix ."
  },
  "dependencies": {
    "alpinejs": "^3.15.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxlint": "^1.47.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
